# Environment Variables for Play & Learn Spark Frontend

# Backend API URL (optional - defaults to localhost:3001)
VITE_API_BASE_URL=http://localhost:3001/api

# Feature flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REALTIME=true

# Static mode configuration
VITE_FALLBACK_TO_STATIC=true
VITE_STATIC_MODE_MESSAGE="Some features require backend services"

# Development settings
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false