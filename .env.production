# Production Environment Variables for Combined Deployment
NODE_ENV=production
PORT=3001
DATABASE_PATH=/app/server/data/database.sqlite
SQLITE_DB_PATH=/app/server/data/database.sqlite

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# App Configuration
APP_NAME=play-learn-spark
MAX_UPLOAD_SIZE=10mb
SESSION_SECRET=your-session-secret-here

# Logging
LOG_LEVEL=info
LOG_FILE=/app/server/logs/app.log

# Performance
MAX_REQUEST_SIZE=10mb
TIMEOUT=30000

# Security Headers
SECURITY_HEADERS=true
RATE_LIMIT=1000

# File Upload Configuration
UPLOAD_DIRECTORY=/app/server/uploads
MAX_FILE_SIZE=5242880

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000