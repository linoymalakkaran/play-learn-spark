{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "composite": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./"],
      "@/pages/*": ["./pages/*"],
      "@/fixtures/*": ["./fixtures/*"],
      "@/helpers/*": ["./helpers/*"],
      "@/tests/*": ["./tests/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "reports"
  ]
}