{
  "name": "play-learn-spark-backend",
  "version": "1.0.0",
  "description": "Backend server for Play Learn Spark educational platform with AI-powered content generation",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,json --exec ts-node src/server.ts",
    "dev:verbose": "nodemon --watch src --ext ts,js,json --exec ts-node --transpile-only src/server.ts",
    "dev:debug": "nodemon --watch src --ext ts,js,json --exec node --inspect=0.0.0.0:9229 -r ts-node/register src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t play-learn-spark-backend .",
    "docker:run": "docker run -p 3001:3001 --env-file .env play-learn-spark-backend",
    "check:routes": "ts-node scripts/check-routes.ts",
    "migrate:dry-run": "ts-node scripts/dataMigration.ts --dry-run",
    "migrate": "ts-node scripts/dataMigration.ts",
    "migrate:rollback": "ts-node scripts/dataMigration.ts --rollback"
  },
  "keywords": [
    "education",
    "ai",
    "backend",
    "children",
    "learning",
    "content-generation"
  ],
  "author": "Play Learn Spark Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@huggingface/inference": "^2.6.4",
    "@types/mongoose": "^5.11.97",
    "@types/qrcode": "^1.5.5",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "multer": "^1.4.4",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "papaparse": "^5.4.1",
    "pdf-parse": "^1.1.1",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/papaparse": "^5.3.14",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
