{
  "name": "play-learn-spark-backend",
  "version": "1.0.0",
  "description": "Backend server for Play Learn Spark educational platform with AI-powered content generation",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js,json --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "docker:build": "docker build -t play-learn-spark-backend .",
    "docker:run": "docker run -p 3001:3001 --env-file .env play-learn-spark-backend"
  },
  "keywords": [
    "education",
    "ai",
    "backend",
    "children",
    "learning",
    "content-generation"
  ],
  "author": "Play Learn Spark Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.19.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
